  {
    "name": "MOS2.0 Reviews",
    "class": "mos2--section dark mos2--reviews",
    "tag": "section",
    "settings": [
        {
            "id": "heading",
            "type": "text",
            "label": "Heading"
        },
        {
            "id": "heading_color",
            "type": "color",
            "label": "Heading Text Color"
        },
        {
            "id": "paragraph",
            "type": "richtext",
            "label": "Paragraph"
        },
        {
            "id": "paragraph_color",
            "type": "color",
            "label": "Paragraph Text Color"
        },
        {
            "id": "image1",
            "type": "image_picker",
            "label": "Desktop Background Image"
        },
        {
            "id": "image2",
            "type": "image_picker",
            "label": "Desktop Background Image"
        },
        {
            "id": "image3",
            "type": "image_picker",
            "label": "Desktop Background Image"
        },
        {
            "id": "image4",
            "type": "image_picker",
            "label": "Desktop Background Image"
        }
    ]
  }

{% endschema %}
