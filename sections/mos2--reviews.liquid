{%- assign heading = section.settings.heading -%}
{%- assign paragraph = section.settings.paragraph -%}
{%- assign image1 = section.settings.image1 -%}
{%- assign image2 = section.settings.image2 -%}
{%- assign image3 = section.settings.image3 -%}
{%- assign image4 = section.settings.image4 -%}

<div class="wayfx-wrapper" style="text-align: center; margin:auto;">
<div class="wayfx-block__text">
    <h1 class="h1--secondary">{{ heading }}</h1>
    {% if paragraph %}{{ paragraph }}{% endif %}
</div>
</div>
<div class="image-slider-wrap">
<div class="wayfx-block--hero-slider-two  wayfx-hero-slider--normal wayfx-hero-slider--1">
<img width="600" height="600" loading="lazy" src="{{ image1 | image_url: width: 600 }}";>
<img width="600" height="600" loading="lazy" src="{{ image2 | image_url: width: 600 }}";>
<img width="600" height="600" loading="lazy" src="{{ image3 | image_url: width: 600 }}";>
{% if image4 %}
<img width="600" height="600" loading="lazy" src="{{ image4 | image_url: width: 600 }}";>
{% endif %}
</div>
</div>
<style>

@media all and (min-width: 767px) {
.image-slider-wrap {max-width:1400px;margin:auto;max-height:600px;}
.wayfx-block--hero-slider-two .wayfx-hero-slider--1 {
background-image: url('{{ image1 | image_url: width: 600 }}');
}
.wayfx-block--hero-slider-two .wayfx-hero-slider--2 {
background-image: url('{{ image2 | image_url: width: 600 }}');
}
.wayfx-block--hero-slider-two .wayfx-hero-slider--3 {
background-image: url('{{ image3 | image_url: width: 600 }}');
}
.wayfx-block--hero-slider-two .wayfx-hero-slider--4 {
background-image: url('{{ image4 | image_url: width: 600 }}');
}
.wayfx-block--hero-slider-two .wayfx-hero-slider--5 {
background-image: url('{{ image3 | image_url: width: 600 }}');
}
}
@media all and (max-width: 767px) {
.wayfx-block--hero-slider-two .wayfx-block.wayfx-block--hero-with-overlay-box {
background: whitesmoke;
}
.wayfx-block--hero-slider-two  .wayfx-block--editorial-2columns a {
background-size: contain;
}
.wayfx-block--hero-slider-two  .image-slider-wrap {max-width:400px;margin:auto;max-height:400px;margin-bottom: 40px;}
.wayfx-hero-slider--1 {
background-image: url('{{ image1 | image_url: width: 400 }}');
}
.wayfx-block--hero-slider-two  .wayfx-hero-slider--2 {
background-image: url('{{ image2 | image_url: width: 400 }}');
}
.wayfx-block--hero-slider-two .wayfx-hero-slider--3 {
background-image: url('{{ image3 | image_url: width: 400 }}');
}
.wayfx-block--hero-slider-two  .wayfx-hero-slider--4 {
background-image: url('{{ image4 | image_url: width: 400 }}');
}
.wayfx-block--hero-slider-two  .wayfx-hero-slider--5 {
background-image: url('{{ image3 | image_url: width: 400 }}');
}
.wayfx-block--hero-slider-two  .wayfx-block--hero-slider .slick-dots {
bottom: -22px !important;
}

}
.wayfx-block--hero-slider-two button.slick-prev.slick-arrow {display: none;}
#introducing-crystal-retinal-20 .wayfx-block.wayfx-block--hero-with-overlay-box .wayfx-block__text {
background: #ffffff38;
max-width: 754px;
}
#introducing-crystal-retinal-20 .wayfx-block--hero-slider-two .wayfx-block--feature .wayfx-block__image img {
height: 100%;
object-fit: contain;
}
.wayfx-block--hero-slider-two .slick-slide {
padding: 0 20px;
}
@media (max-width: 1023px){
#introducing-crystal-retinal-20 .wayfx-block--hero-slider-two  .wayfx-block--editorial-2columns .wayfx-block__one {
margin-bottom: 0px;
}
#introducing-crystal-retinal-20 .wayfx-block--hero-slider-two  .wayfx-block--editorial-2columns.wayfx-block--editorial-2columns-large a {
min-height: 450px;}
.wayfx-block--hero-slider-two .slick-slide {
padding: 0 12px;
}
}
.wayfx-block--hero-slider-two .slick-next {
right: -48px;
}
.wayfx-block--hero-slider-two .slick-prev {
display: none !important;
}
.image-slider-wrap .slick-slider .slick-track {
background: white;
}

</style>

<script>


var heroSliderSettings = {
slidesToShow: 1,
slidesToScroll: 1,
arrows: false,
draggable: true,
infinite: true,
adaptiveHeight: false,
mobileFirst: true,
dots: true,
autoplay: false,
autoplaySpeed: 5000,
responsive: [
{
breakpoint: 0,
settings: {
arrows: false,
dots: true,
centerMode: true
}
},
{
breakpoint: 768,
settings: {
draggable: false,
dots: false,
arrows: true,
slidesToShow: 2,
slidesToScroll: 1
}
}
]
};

var $slides = $('.wayfx-block--hero-slider-two');

document.addEventListener("shopify:section:unload", function(event) {
$slides.slick('unslick');
});

document.addEventListener("shopify:section:load", function(event) {
$slides.slick(heroSliderSettings);
});

$slides.slick(heroSliderSettings);

</script>

