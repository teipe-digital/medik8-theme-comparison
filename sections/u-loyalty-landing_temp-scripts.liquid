  /*=============================================================================
  # FAQ (taken from "so-tab" rewards.css)
  ==============================================================================*/

  .ll-faq {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-bottom: 1px solid #bfbfbf;
    margin: 0; 
  }
  
  .ll-faq input {
    position: absolute;
    opacity: 0;
    z-index: -1; 
  }
  
  .ll-faq input:checked ~ .ll-faq-content {
    max-height: none; 
  }
    
  .ll-faq label::after {
    position: absolute;
    right: 8px;
    top: 31px;
    display: block;
    width: 26px;
    height: 26px;
    line-height: 3;
    text-align: center;
    -webkit-transition: all .35s;
    -o-transition: all .35s;
    transition: all .35s; 
  }
  
  .ll-faq input[type=checkbox] + label::after {
    content: "";
    background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm6 13h-5v5a1 1 0 11-2 0v-5H6a1 1 0 110-2h5V6a1 1 0 112 0v5h5a1 1 0 110 2z' fill='%23000' fill-rule='nonzero'/%3E%3C/svg%3E%0A");
    background-repeat: no-repeat;
    background-position: center center; 
  }
    
  .ll-faq input[type=checkbox]:checked + label::after {
    background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zM6 11h12a1 1 0 010 2H6a1 1 0 010-2z' fill='%23000' fill-rule='nonzero'/%3E%3C/svg%3E "); 
  }
  
  .ll-faq input[type=radio] + label::after {
    content: "\25BC"; 
  }
    
  .ll-faq input[type=radio]:checked + label::after {
    transform: rotateX(180deg); 
  }
  
  .ll-faq label {
    position: relative;
    display: block;
    padding: 24px 40px 24px 0;
    font-family: "ridley_groteskmedium", sans-serif;
    margin-bottom: 0;
    font-size: 20px;
    line-height: 34px;
    font-weight: normal;
    color: #000;
    cursor: pointer; 
  }
  
  .ll-faq-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height .35s; 
  }
  
  .ll-faq-content p {
    color: #262626;
    font-size: 18px;
    margin: 0 0 14px 0; 
  }

  
  /*=============================================================================
  # POINTS GRID
  ==============================================================================*/

  #loyaltylion{
    font-family: ridley_groteskregular,sans-serif;
  }

