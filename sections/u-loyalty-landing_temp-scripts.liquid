  }
  
  .lion-icon__rule.lion-icon__rule--newsletter-signup{ 
    background-image:url({{ 'loyalty-landing.newsletter.svg' | asset_url | json }});
  }

  .lion-icon__rule.lion-icon__rule--instagram-follow{ 
    background-image:url({{ 'loyalty-landing.instagram.svg' | asset_url | json }});
  }

   .lion-icon__rule.lion-icon__rule--instagram-follow{ 
    background-image:url({{ 'loyalty-landing.instagram.svg' | asset_url | json }});
  }

  #loyaltylion .lion-reward-item__content, #loyaltylion .lion-rule-item__content{
    padding:0 var(--gutter-unit-d2);
    min-height:0;
  }
 
  #loyaltylion .lion-action-button--tile.lion-action-button--completed, 
  #loyaltylion .lion-action-button--tile.lion-action-button--disabled,
  #loyaltylion .lion-action-button--tile{
    border:none;
    padding: 0;
    font-weight:600;
    text-decoration:underline;
  }
  #loyaltylion .lion-action-button--tile.lion-action-button--completed, 
  #loyaltylion .lion-action-button--tile.lion-action-button--disabled{
    text-decoration:none;
  }

  #loyaltylion .lion-action-button--tile:hover{
    background:#fff;
    color:#000;
  }

  @media (max-width: 520px){
    #loyaltylion .lion-claimed-rewards-list, #loyaltylion .lion-rewards-list, #loyaltylion .lion-rules-list {
      gap:var(--gutter-unit-d2);
      display:flex;
      align-items: stretch;
      justify-content:left;
      flex-flow:row wrap;
      padding:0 var(--gutter-unit);
    }

    #loyaltylion .lion-reward-item, #loyaltylion .lion-rule-item{
      width:calc(50% - (var(--gutter-unit-d2) / 2));
