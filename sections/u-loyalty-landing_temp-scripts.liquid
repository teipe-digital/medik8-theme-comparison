  }

  /*=============================================================================
  # REWARDS / HISTORY TABLE
  ==============================================================================*/

  .ll-table thead tr{
    background:#000;
  }

  .ll-table th{
    border:none;
    color:#fff;
    background:#000;
    position:relative;
  }

  .ll-table th:after{
    content:'';
    background:red;
    width:2px;
    height:100%;
    top:0;
    right:0;
    z-index:2;
  }

  .ll-table td{
    border:none;
    border-bottom:1px solid #D9D9D9;
  }

  .ll-tablenation__btn{
    display:flex;
    align-items:center;
    justify-content:flex-start;
  }

  .ll-tablenation__btn:disabled{
    opacity:0.5;
  }

  .ll-tablenation__btn[data-paginate="next"]{
    justify-content:flex-end;
  }

  .ll-tablenation__btn[data-paginate="next"]:after{
    width:9px;
    height:17px;
    content:'';
    margin-left:var(--gutter-unit-d2);
    background-image:url("data:image/svg+xml;base64,");
    background-size:contain;
    background-repeat:no-repeat;
  }

  .ll-tablenation__btn[data-paginate="prev"]:before{
    width:9px;
    height:17px;
    content:'';
    margin-right:var(--gutter-unit-d2);
    background-image:url("data:image/svg+xml;base64,");
    background-size:contain;
    transform:translateY(-3px) rotate(180deg);
    background-repeat:no-repeat;
  }

  .ll-tablenation__current{
    border:1px solid #ccc;
    width:30px;
    height:30px;
    display:flex;
    justify-content:center;
    align-items:center;
    margin-right:5px;
  }


  @media screen and (max-width:{{ bp-mobile }}) {
    .ll-table{
      font-size:var(--t-xxs);
    }
  }

  /*=============================================================================
  # CURRENT TIER
  ==============================================================================*/

  .ll-current-tier-item{
    max-width:256px;
  }

  .ll-current-tier-item:not(.ll-current-tier-item--active){
    opacity:0.3;
  }


  @media screen and (max-width:{{ bp-mobile }}) {
    .ll-current-tier-item:not(.ll-current-tier-item--active){
      display:none;
    }
  }


  /*=============================================================================
  # BENEFITS TABLE
  ==============================================================================*/

  :root{
    --benefits-column-width:220px;
    --benefits-title-column-width:180px;
  }

  .ll-benefits-table{
    display: inline-flex;
    flex-flow:row wrap;
    min-width: 100%;
  }

  .ll-benefits-table__row {
    border-bottom:1px solid #D7D7D7;
    display:inline-flex;
    min-width:100%;
    align-items:stretch;
    gap:var(--gutter-unit);
  }

  .ll-benefits-table__row:last-child{
    border-bottom:none;
  }
  

  .ll-benefits-table__cell{
    font-size:var(--t-m);
    line-height:1.7;
    padding:var(--gutter-unit);
    text-align:center;
    min-height:100%;
    text-align:center;
    display:flex;
    flex-flow: column wrap;
    align-items:center;
    justify-content:center;
    position:relative;
    z-index:1;
    width:calc( var(--benefits-column-width) - var(--gutter-unit));
  }

  .ll-benefits-table__cell--title {
    background:#fff;
    text-align:left;
    align-items:start;
    padding-left:0;
    z-index:2;
    min-width:var(--benefits-title-column-width);
    width:calc(100% - ( (var(--benefits-column-width) - var(--gutter-unit)) * 3) );
    padding-right:0;
  }

  .ll-benefits-table__cell[data-active="false"] svg,
  .ll-benefits-table__cell[data-active="false"] span{
    opacity:0.2;
  }


  .ll-benefits-table__cell:not(.ll-benefits-table__cell--title):after{
    content:'';
    position:absolute;
    left:0;
    width:100%;
    top:0;
    height:100%;
    background:#f7f7f7;
    z-index:-1;
    opacity:1;
  }

  .ll-benefits-table__cell:nth-child(3):after{
    background:#f1f1f1;
  }

  .ll-benefits-table__cell:nth-child(4):after{
    background:#e6e6e6;
  }

  .ll-benefits-table__cell--header{
    padding-top:var(--gutter-unit-x2);
    justify-content: flex-start;
  }

  .ll-benefits-table__cell--header svg{
    width:auto;
    max-height:80px;
    display:block;
    margin-bottom:var(--gutter-unit-d2);
  }

  .ll-benefits-table__cell--header:after{
    border-radius:999px 999px 0  0;
  }

  .ll-benefits-table__tick{
    width:30px;
    height:30px;
  }

  @media screen and (max-width:{{ bp-mobile }}) {

    .ll-benefits-table__row {

    }

    .ll-benefits-table__cell--title {
      position:sticky;
      left:0;
    }

    .ll-benefits-table__cell{
      max-width:40vw;
      font-size:var(--t-r);
    }

  }

  /*=============================================================================
  #POINTS BAR
  ==============================================================================*/


  .ll-points-bar{
    display: flex;
    flex-flow:row wrap;
    align-items:center;
    justify-content:space-between;
  }

  .ll-points-bar__block{
    flex-grow: 1;
    display: flex;
    flex-flow:row wrap;
    align-items:flex-end;
    justify-content:center;
  }


 
 .ll-points-counter{
   display:block;
   position:relative;
   width:100%;
   height:20px;
   background-color:#C7C7C7;
   margin:var(--gutter-unit-d2) 0;
   border-radius:10px
 }

 .ll-points-counter__count:after{
  background-color:#D8D8D8;
  position:absolute;
  border:2px solid #3A3A3A;
  width:20px;
  height:20px;
  border-radius:100%;
  top:0;
  right:0;
  z-index:2;
  content:'';
}

 .ll-points-counter__count{
   position:absolute;
   left:0;
   top:0;
   height:100%;
   width:100%;
   background-color:#3A3A3A;
   border-radius:10px;
   min-width:20px;
   min-height:20px;
 }


  .ll-reward-selector{
    min-width:256px;
  }


  @media screen and (max-width:{{ bp-mobile }}) {
    
    .ll-points-bar-wrapper{
      margin-left:auto;
      margin-right:auto;
    }


    .ll-points-counter{
      position:absolute;
      bottom:0;
      left:50%;
      height:100%;
      width:20px;
      transform:translate(-50%,0);
      margin:0;
    }

    .ll-points-counter__count{
      top:auto;
      bottom:0;
    }

    .ll-points-bar{
      flex-flow:column-reverse;
      align-items: center;
      width:50%;
    }

    .ll-points-bar:first-of-type{
      padding-right:calc(10px + var(--gutter-unit));
    }

    .ll-points-bar:last-of-type{
      padding-left:calc(10px + var(--gutter-unit));
    }
  
    .ll-points-bar__block{
      width:100%;
      align-items: center;
      height:60px;
    }

    .ll-points-bar__block--amount{
      justify-content:flex-end;
    }

    .ll-points-bar__block--points{
      justify-content:flex-start;
    }
  
    .ll-points-bar__amount--current:before{
      top:0px;
      right:0px;
    }
    
  }

</style>