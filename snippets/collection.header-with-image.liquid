{{ "collection-header-with-images.css" | asset_url | stylesheet_tag }}

<div class="wayfx-wrapper">
    <div class="grid">
        <div class="wayfx-block__left grid__item one-whole large--two-quarters">
            {% render 'breadcrumb' %}
            <h1 class="h1--secondary">{{ collection.title | replace: '[hidden]', '' }}</h1>
            {% if collection.description != blank %}
                {{ collection.description }}
            {% endif %}
        </div>
        <div class="wayfx-block__right grid__item large--two-quarters">
            <img loading="lazy" src="{{ collection.image | image_url }}" alt="{{collection.image.alt}}" width="{{collection.image.width}}" height="{{collection.image.height}}"/>
        </div>
    </div>
</div>