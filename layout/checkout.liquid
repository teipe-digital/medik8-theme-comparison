<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">
    <title>{{ page_title }}</title>
    {{ content_for_header }}
    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
    {{ 'checkout.scss.css' | asset_url | stylesheet_tag }}

    
    {% if settings.optimize_id != blank %}
      <!-- Google Optimize -->
      <script async src="https://www.googleoptimize.com/optimize.js?id={{settings.optimize_id}}"></script>
    {% endif %}

    {% if settings.hotjar_id != blank %}
    <!-- Hotjar Tracking Code for https://www.medik8.com/ -->
    <script>
      (function(h,o,t,j,a,r){
        h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
        h._hjSettings={hjid:{{settings.hotjar_id}},hjsv:6};
        a=o.getElementsByTagName('head')[0];
        r=o.createElement('script');r.async=1;
        r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
        a.appendChild(r);
      })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
    </script>
  {% endif %}

{% include 'analyzify-gtm-checkout' %}

</head>
  <body>

    {{ skip_to_content_link }}
    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>
    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
      </div>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js" async></script>
    {{ tracking_code }}

    <script>
      (function($) {
        $(document).on("page:load page:change", function() {
          if (Shopify.Checkout.step === "payment_method") {
            {% if settings.legal__agree_to_legal_checkbox_enabled %}
            $('.step__footer').before(`
<div class="section section--checkout-terms">
<div class="section__header">
<h2 class="section__title">
{{ settings.legal__agree_to_legal_checkbox_title }}
      </h2>
      </div>
<div class="section__content">
<div class="content-box">
<div class="content-box__row">
<div class="checkbox-wrapper">
<div class="checkbox__input">
<input class="input-checkbox" type="checkbox" name="checkout[checkout_terms]" id="checkout_terms" required>
      </div>
<label class="checkbox__label content-box__emphasis" for="checkout_terms">
{{ settings.legal__agree_to_legal_checkbox_label }}
      </label>
      </div>
      </div>
      </div>
      </div>
      </div>
`);
            {% endif %}
          }
        });
      })(Checkout.$);
    </script>

    <script>

      const continueButtons = document.querySelectorAll('button[name="button"]');

      continueButtons.forEach((continueButton) => {
        const form = continueButton.closest('form');
        const heading = form.querySelector('h2');
        const headingContent = heading.innerText;

        continueButton.dataset.zukoHtmlName =
          `${headingContent} ${continueButton.name}`;
      })

    </script>

    {% render 'discounts' %}
    {% render 'discounts--checkout-script' %}
    
  </body>
</html>
